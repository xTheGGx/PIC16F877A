#include <16F877.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=20000000)
#include <lcd.c>

void main() {
 byte leds;
 
int var1;
 lcd_init();
 set_tris_a(0x01);


 var1 = input_a();

 switch(var1){
   case 0:
      output_b(0x00); 
      break;
   case 1:
      output_b(0xFF); 
      break;
   case 2:
      leds = ((leds << 1)|(leds >> 7));
      output_b(leds);
      delay_ms(500);
      leds = ((leds << 1)|(leds >> 7));
      output_b(leds);
      delay_ms(500);
      break;
   case 3:
      leds = ((leds << 1)|(leds >> 7));
      output_b(leds);
      delay_ms(500);
      break;
   case 4:
      break;
   case 5:
      break;
   default:
     output_b(0x00); 
     
   
 }
 }
 

