#include <16F877.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=20000000)
#include <lcd.c>

void main() {
 
 byte leds;
 
 int var1;
 lcd_init();
 char input; 
 set_tris_a(0xFF);   //PortA como entrada
 set_tris_b(0x00);   //PortB como salida

 var1 = input_a();
 input = getc();

    switch(input){
    case 0:
        output_b(0x00); 
        break;
    case 1:
        output_b(0xFF); 
        break;
    case '2':
       leds = ((leds >> 1) | (leds << 7)); // Rotación a la derecha
       output_b(leds);
       delay_ms(500);
       break;
 
    case 3:
    
        break;
    case 4:
        break;
    case 5:
        break;
    default:
        output_b(0x00); 
        
    
    }
 }
 

