#include <16F877.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=20000000)
#include <lcd.c>

void main() {
 byte leds;
 lcd_init();

 while( TRUE ) {
 
 switch(input_a){
   case 0:
      output_b(0x00); 
      break;
   case 1:
      output_b(0xFF); 
      break;
   case 2:
      leds = (leds << 1)|(leds >> 7));
      output_b(leds);
      delay_ms(500);
      break;
   case 3:
      break;
   case 4:
      break;
   case 5:
      break;
   default:
     output_b(0xFF); 
     
   
 }
 lcd_gotoxy(1,1);
 printf(lcd_putc," UNAM \n ");
 lcd_gotoxy(1,2);
 printf(lcd_putc," FI \n ");
 delay_ms(300);
 }
 }
